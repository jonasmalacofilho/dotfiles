Host github.com
	UpdateHostKeys no
	User git

Host gitlab.com
	User git

Host bitbucket.org bitbucket.com
	User git

Host aur.archlinux.org
	User aur

Host *.ngrok.io
	CheckHostIP no
	LogLevel ERROR
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null

Host *
	AddKeysToAgent yes
	ServerAliveCountMax 20
	ServerAliveInterval 15
	StrictHostKeyChecking ask
	TCPKeepAlive no
	UpdateHostKeys ask
	VisualHostKey yes
