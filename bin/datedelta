#!/usr/bin/env python3

import sys
from datetime import date

if len(sys.argv) == 1 or "-h" in sys.argv[1] or "--help" in sys.argv[1]:
    print("Usage: datedelta <first> [last]")
    raise SystemExit(1 if len(sys.argv) == 1 else 0)
if len(sys.argv) > 3:
    raise ValueError("too many arguments, at most two dates expected")

args = [date.fromisoformat(arg) for arg in sys.argv[1:]]

first = args[0]
second = args[1] if len(args) == 2 else date.today()
delta = (second - first).days

print(delta, "days" if delta > 1 else "day")
