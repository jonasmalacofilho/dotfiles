# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="afowler"
# also: afowler, gentoo, lukerandall, essembeh, robbyrussell

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
DISABLE_UNTRACKED_FILES_DIRTY="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
# HIST_STAMPS="mm/dd/yyyy"

# Would you like to use another custom folder than $ZSH/custom?
# ZSH_CUSTOM=/path/to/new-custom-folder

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git vi-mode wd)

# User configuration

export PATH=$HOME/bin:/usr/local/bin:$PATH
# export MANPATH="/usr/local/man:$MANPATH"

setopt EXTENDED_GLOB

source $ZSH/oh-my-zsh.sh

# vi-mode extension: bind Ctrl-r to search
bindkey '^r' history-incremental-search-backward
bindkey '^q' history-incremental-search-forward

# general aliases
alias sd="systemctl"
alias jd="journalctl"
alias jo="xdg-open"  # just open
alias t="tree"
alias t1="tree -L 1"
alias t2="tree -L 2"
alias t3="tree -L 3"
alias t4="tree -L 4"
alias updatemirrors="curl -s 'https://www.archlinux.org/mirrorlist/?country=BR&protocol=http&protocol=https&ip_version=4&ip_version=6&use_mirror_status=on' | sed -e 's/^#Server/Server/' -e '/^#/d' | rankmirrors - | _ tee /etc/pacman.d/mirrorlist"

# always use vim
export VISUAL=vim EDITOR=vim
alias vi="vim"

# deprecated aliases
alias pstat="perf stat -e task-clock,context-switches,cpu-migrations,page-faults,cpu-cycles,instructions,stalled-cycles-frontend,stalled-cycles-backend,cache-references,cache-misses,branches,branch-misses"
alias tmux="tmux -2"  # fix tmux->vim colors for me
alias tx="tmux"

# hack to keep all aliases to sudo
alias sudo='sudo '
alias _!='sudo $(fc -ln -1)'

# glog variant using kernel style commit references
alias gkref="git log --abbrev=12 --graph --decorate --pretty='%C(auto)%d %C(reset)%C(auto)%h %C(reset)(\"%s\")%C(reset)'"

# why only gcm (master), we need a gcd too
alias gcd="git checkout development"

# liquidctl
alias qs='sudo liquidctl status'
alias qkraken='sudo liquidctl --vendor 0x1e71 --product 0x170e'
alias qcase='sudo liquidctl --vendor 0x1e71 --product 0x1714'
alias qclc='sudo liquidctl --vendor 0x2433 --product 0xb200'
compdef _gnu_generic liquidctl

# working with sysfs
function sysecho() {
	echo "$2" | sudo tee "$1"
}

# remember the current dir when opening new windows or tabs
source /etc/profile.d/vte.sh

# SSH
# assumes .config/systemd/user/ssh-agent is running
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"
# add my keys, if not already added
ssh-add -l > /dev/null || ssh-add

# IMPORTANT nothing should happen after this point!  By making ssh-add the last
# thinghere, it can fail without skiping the rest

