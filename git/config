	name = Jonas Malaco
	email = jonas@protocubo.io
	signingkey = 06af7ad0

[core]
	excludesfile = ~/.gitignore.global
	abbrev = 12
	pager = less

[init]
	defaultBranch = main

[branch]
	sort = -committerdate

[tag]
	sort = -version:refname

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true

[commit]
	verbose = true

[push]
	default = simple

[pull]
	rebase = false

# Reuse recorded resolutions.
[rerere]
	enabled = true
	autoupdate = true

[help]
	autocorrect = prompt

[alias]
	klog = log --abbrev=12 --graph --decorate --pretty='%C(auto)%d %C(reset)%C(auto)%h %C(reset)(\"%s\")%C(reset)'
	head = !git --no-pager log --abbrev=12 --oneline --format='%h' -1
	pulls = fetch origin "+refs/pull/*:refs/origin/pull/*"
	upulls = fetch upstream "+refs/pull/*:refs/upstream/pull/*"

[url "git@github.com:"]
	insteadOf = "gh:"

[url "git@gitlab.com:"]
	insteadOf = "gl:"

# Patch-based workflows.

[format]
	signOff = true

[sendemail]
