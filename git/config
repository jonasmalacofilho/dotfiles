[alias]
	head = !git --no-pager log --abbrev=12 --oneline --format='%h' -1
	klog = log --abbrev=12 --graph --decorate --pretty='%C(auto)%d %C(reset)%C(auto)%h %C(reset)(\"%s\")%C(reset)'
	pulls = fetch origin "+refs/pull/*:refs/origin/pull/*"
	upulls = fetch upstream "+refs/pull/*:refs/upstream/pull/*"

[core]
	abbrev = 12
	excludesfile = ~/.gitignore.global
	pager = less

[branch]
	sort = -committerdate

[commit]
	verbose = true

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[fetch]
	all = true
	prune = true
	pruneTags = true

# For patch-based workflows.
[format]
	signOff = true

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true
	default = simple
	followTags = true

[rebase]
	autoSquash = true
	updateRefs = true

# Reuse recorded resolutions.
[rerere]
	autoupdate = true
	enabled = true

[tag]
	sort = -version:refname

